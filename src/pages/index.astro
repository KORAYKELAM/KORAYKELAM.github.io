---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Koray Kelam"
  description="Koray Kelam — projects, publications, and links."
>
  <main class="relative max-w-5xl mx-auto px-6 py-24">
    <!-- Sticky Header -->
    <header
      class="sticky top-0 z-50 -mx-6 mb-10 border-b border-slate-200/70 bg-white/75 px-6 py-4 backdrop-blur
             dark:border-slate-900 dark:bg-slate-950/60"
    >
      <div class="flex items-center justify-between">
        <a
          href="/"
          class="font-semibold tracking-tight transition hover:text-black dark:hover:text-white"
        >
          Koray Kelam
        </a>

        <nav class="flex items-center gap-4 text-sm text-slate-700 dark:text-slate-300">
          <a class="transition hover:text-black dark:hover:text-white" href="#projects">Projects</a>
          <a class="transition hover:text-black dark:hover:text-white" href="#publications">Publications</a>

          <button
            id="themeToggle"
            class="ml-2 rounded-xl border border-slate-200 bg-slate-100/70 px-3 py-2 text-xs font-semibold
                   hover:bg-slate-200/70 transition
                   dark:border-slate-800 dark:bg-slate-900/30 dark:hover:bg-slate-900/60"
            type="button"
            aria-label="Toggle theme"
          >
            Theme
          </button>
        </nav>
      </div>
    </header>

    <!-- subtle background glow -->
    <div class="pointer-events-none absolute inset-0 -z-10 overflow-hidden" aria-hidden="true">
      <div
        class="absolute -top-24 left-1/2 h-72 w-[42rem] -translate-x-1/2 rounded-full blur-3xl opacity-30
               bg-gradient-to-r from-fuchsia-500 via-sky-500 to-emerald-400"
      ></div>
      <div
        class="absolute top-64 left-10 h-56 w-56 rounded-full blur-3xl opacity-20
               bg-gradient-to-br from-indigo-500 to-pink-500"
      ></div>
    </div>

    <!-- HERO -->
    <section class="reveal flex flex-col gap-10">
      <div class="space-y-5">
        <p
          class="inline-flex items-center gap-2 rounded-full border border-slate-200 bg-white/70 px-4 py-2 text-sm text-slate-700
                 dark:border-slate-800 dark:bg-slate-900/40 dark:text-slate-300"
        >
          <span class="h-2 w-2 rounded-full bg-emerald-400"></span>
          Online • Portfolio
        </p>

        <h1 class="text-5xl sm:text-6xl font-bold tracking-tight">
          Koray Kelam
        </h1>

        <p class="text-xl text-slate-700 dark:text-slate-300 max-w-2xl leading-relaxed">
          Researcher · Engineer · Curious Mind. I build clean solutions, ship
          projects, and publish what I learn.
        </p>

        <div class="flex flex-wrap gap-3 pt-2">
          <a
            href="https://www.linkedin.com/in/koraykelam/"
            target="_blank"
            rel="noreferrer"
            class="group inline-flex items-center justify-center rounded-xl bg-slate-950 px-6 py-3 font-semibold text-white
                  transition hover:scale-[1.03] active:scale-[0.99]
                  dark:bg-white dark:text-black"
          >
            LinkedIn
            <span class="ml-2 transition group-hover:translate-x-0.5">→</span>
          </a>
          <a
            href="https://github.com/KORAYKELAM"
            target="_blank"
            rel="noreferrer"
            class="group inline-flex items-center justify-center rounded-xl bg-slate-950 px-6 py-3 font-semibold text-white
                   transition hover:scale-[1.03] active:scale-[0.99]
                   dark:bg-white dark:text-black"
          >
            GitHub
            <span class="ml-2 transition group-hover:translate-x-0.5">→</span>
          </a>

          <a
            href="#projects"
            class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white/70 px-6 py-3 font-semibold text-slate-950
                   transition hover:bg-slate-100/70
                   dark:border-slate-800 dark:bg-slate-900/30 dark:text-slate-100 dark:hover:bg-slate-900/60"
          >
            Projects
          </a>

          <a
            href="#publications"
            class="inline-flex items-center justify-center rounded-xl border border-slate-200 bg-white/70 px-6 py-3 font-semibold text-slate-950
                   transition hover:bg-slate-100/70
                   dark:border-slate-800 dark:bg-slate-900/30 dark:text-slate-100 dark:hover:bg-slate-900/60"
          >
            Publications
          </a>
        </div>
      </div>

      <!-- quick stats / cards -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div
          class="rounded-2xl border border-slate-200 bg-white/70 p-5 shadow-sm
                 dark:border-slate-800 dark:bg-slate-900/30"
        >
          <p class="text-sm text-slate-600 dark:text-slate-400">Focus</p>
          <p class="mt-2 font-semibold">Computer Vision • ML • Robotics</p>
        </div>
        <div
          class="rounded-2xl border border-slate-200 bg-white/70 p-5 shadow-sm
                 dark:border-slate-800 dark:bg-slate-900/30"
        >
          <p class="text-sm text-slate-600 dark:text-slate-400">What you’ll find</p>
          <p class="mt-2 font-semibold">Projects, papers, and demos</p>
        </div>
        <div
          class="rounded-2xl border border-slate-200 bg-white/70 p-5 shadow-sm
                 dark:border-slate-800 dark:bg-slate-900/30"
        >
          <p class="text-sm text-slate-600 dark:text-slate-400">Currently</p>
          <p class="mt-2 font-semibold">Building & learning daily</p>
        </div>
      </div>
    </section>

    <!-- PROJECTS -->
    <section id="projects" class="reveal mt-20 scroll-mt-24">
      <div class="flex items-end justify-between gap-6 mb-8">
        <div>
          <h2 class="text-2xl font-bold">Projects</h2>
          <p class="text-slate-600 dark:text-slate-400 mt-2">
            A few highlights. Hover the cards.
          </p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
        <!-- card 1 -->
        <div
          class="group rounded-2xl border border-slate-200 bg-white/70 p-6 transition hover:-translate-y-1 hover:bg-white
                dark:border-slate-800 dark:bg-slate-900/30 dark:hover:bg-slate-900/50 dark:hover:border-slate-700"
        >
          <div class="flex items-start justify-between gap-4">
            <h3 class="text-lg font-semibold">Project Title #1</h3>
            <span
              class="rounded-full border border-slate-200 px-3 py-1 text-xs text-slate-600
                     dark:border-slate-800 dark:text-slate-300"
            >2025</span>
          </div>

          <p class="mt-3 text-slate-600 dark:text-slate-400 leading-relaxed">
            One-liner description of what this does and why it’s cool.
          </p>

          <div class="mt-5 flex flex-wrap gap-2">
            <span class="rounded-full border border-slate-200 bg-slate-100/70 px-3 py-1 text-xs text-slate-700
                         dark:border-slate-800 dark:bg-slate-900/40 dark:text-slate-300">Python</span>
            <span class="rounded-full border border-slate-200 bg-slate-100/70 px-3 py-1 text-xs text-slate-700
                         dark:border-slate-800 dark:bg-slate-900/40 dark:text-slate-300">Computer Vision</span>
            <span class="rounded-full border border-slate-200 bg-slate-100/70 px-3 py-1 text-xs text-slate-700
                         dark:border-slate-800 dark:bg-slate-900/40 dark:text-slate-300">OpenCV</span>
          </div>

          <a
            href="https://github.com/KORAYKELAM"
            target="_blank"
            rel="noreferrer"
            class="mt-5 inline-flex items-center text-sm font-semibold text-slate-700
                  hover:text-slate-950 transition
                  dark:text-slate-300 dark:hover:text-white"
          >
            Open repo
            <span class="ml-1 transition group-hover:translate-x-0.5">→</span>
          </a>
        </div>

        <!-- card 2 -->
        <div
          class="group rounded-2xl border border-slate-200 bg-white/70 p-6 transition hover:-translate-y-1 hover:bg-white
                dark:border-slate-800 dark:bg-slate-900/30 dark:hover:bg-slate-900/50 dark:hover:border-slate-700"
        >
          <div class="flex items-start justify-between gap-4">
            <h3 class="text-lg font-semibold">Project Title #2</h3>
            <span
              class="rounded-full border border-slate-200 px-3 py-1 text-xs text-slate-600
                     dark:border-slate-800 dark:text-slate-300"
            >2024</span>
          </div>

          <p class="mt-3 text-slate-600 dark:text-slate-400 leading-relaxed">
            Another short description. Replace with your real project.
          </p>

          <div class="mt-5 flex flex-wrap gap-2">
            <span class="rounded-full border border-slate-200 bg-slate-100/70 px-3 py-1 text-xs text-slate-700
                         dark:border-slate-800 dark:bg-slate-900/40 dark:text-slate-300">PyTorch</span>
            <span class="rounded-full border border-slate-200 bg-slate-100/70 px-3 py-1 text-xs text-slate-700
                         dark:border-slate-800 dark:bg-slate-900/40 dark:text-slate-300">ML</span>
            <span class="rounded-full border border-slate-200 bg-slate-100/70 px-3 py-1 text-xs text-slate-700
                         dark:border-slate-800 dark:bg-slate-900/40 dark:text-slate-300">Data</span>
          </div>

          <a
            href="https://www.linkedin.com/posts/koraykelam_we-have-successfully-completed-our-mech-491-activity-7209886103053492225-Ix7A?utm_source=share&utm_medium=member_desktop&rcm=ACoAADBL9sQB_9XF4vCWbbKOPxsrMMjDlbxUocI"
            target="_blank"
            rel="noreferrer"
            class="mt-5 inline-flex items-center text-sm font-semibold text-slate-700
                  hover:text-slate-950 transition
                  dark:text-slate-300 dark:hover:text-white"
          >
            See details
            <span class="ml-1 transition group-hover:translate-x-0.5">→</span>
          </a>
        </div>
      </div>
    </section>

    <!-- PUBLICATIONS -->
    <section id="publications" class="reveal mt-20 scroll-mt-24">
      <h2 class="text-2xl font-bold">Publications</h2>
      <p class="text-slate-600 dark:text-slate-400 mt-2 max-w-2xl">
        Peer-reviewed work and academic outputs.
      </p>

      <div
        class="mt-8 rounded-2xl border border-slate-200 bg-white/70 p-6
              dark:border-slate-800 dark:bg-slate-900/30"
      >
        <div class="flex flex-wrap items-start justify-between gap-4">
          <div class="space-y-1">
            <h3 class="text-lg font-semibold">
              A new trochoidal milling strategy for high-performance CNC machining
            </h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">
              Journal of Manufacturing Processes • Volume 157 • 17 Jan 2026 • pp. 747–762
            </p>
            <p class="text-sm text-slate-600 dark:text-slate-400">
              Mahmoud Alipour Sougavabar · <span class="font-semibold text-slate-900 dark:text-slate-200">Koray Kelam</span> · Ismail Lazoglu
            </p>
          </div>

          <a
            href="https://www.sciencedirect.com/science/article/abs/pii/S1526612525013532?via%3Dihub"
            target="_blank"
            rel="noreferrer"
            class="inline-flex items-center justify-center rounded-xl bg-slate-950 px-5 py-2.5 font-semibold text-white transition hover:scale-[1.03] active:scale-[0.99]
                  dark:bg-white dark:text-black"
          >
            Read on ScienceDirect →
          </a>
        </div>

        <p class="mt-4 text-slate-700 dark:text-slate-300 leading-relaxed">
          Proposes an adaptive trochoidal toolpath strategy with stepover modulation and a custom G-code approach
          to reduce load fluctuations and improve efficiency in high-performance CNC milling.
        </p>

        <div class="mt-4 flex flex-wrap items-center gap-3 text-sm">
          <span class="rounded-full border border-slate-200 bg-slate-100/70 px-3 py-1 text-slate-700
                      dark:border-slate-800 dark:bg-slate-900/40 dark:text-slate-300">
            DOI: 10.1016/j.jmapro.2025.12.033
          </span>

        </div>
      </div>
    </section>

    <!-- FOOTER -->
    <footer class="mt-24 border-t border-slate-200/70 pt-10 text-sm text-slate-500 dark:border-slate-900">
      <p>
        © {new Date().getFullYear()} Koray Kelam · Built with Astro + Tailwind
      </p>
    </footer>

    <!-- Reveal script (runs once per section) -->
    <script>
      const els = Array.from(document.querySelectorAll(".reveal"));

      const revealNow = () => {
        const vh = window.innerHeight || document.documentElement.clientHeight;
        els.forEach((el) => {
          const r = el.getBoundingClientRect();
          if (r.top < vh - 80) el.classList.add("is-visible");
        });
      };

      const io = new IntersectionObserver(
        (entries) => {
          entries.forEach((e) => {
            if (e.isIntersecting) {
              e.target.classList.add("is-visible");
              io.unobserve(e.target);
            }
          });
        },
        { threshold: 0.15 }
      );

      els.forEach((el) => io.observe(el));
      revealNow();
      window.addEventListener("load", revealNow, { once: true });
    </script>

    <!-- Theme toggle (default dark, persisted) -->
    <script>
      window.addEventListener("DOMContentLoaded", () => {
        const root = document.documentElement;
        const key = "theme";

        const setTheme = (t) => {
          root.classList.toggle("dark", t === "dark");
          localStorage.setItem(key, t);
        };

        const saved = localStorage.getItem(key);
        setTheme(saved === "light" ? "light" : "dark"); // default dark

        const btn = document.getElementById("themeToggle");
        if (btn) {
          const updateLabel = () => {
            btn.textContent = root.classList.contains("dark") ? "Light" : "Dark";
          };
          updateLabel();

          btn.addEventListener("click", () => {
            setTheme(root.classList.contains("dark") ? "light" : "dark");
            updateLabel();
          });
        }
      });
    </script>
  </main>
</Layout>
