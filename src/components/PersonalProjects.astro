---
import { labels } from "../i18n";
import ProjectsRow from "./ProjectsRow.astro";

const { lang = "en" } = Astro.props;
const t = labels[lang];
---

<ProjectsRow
  id="personal-projects"
  title={t.personalProjects.title}
  subtitle={t.personalProjects.subtitle}
  hint={t.personalProjects.hint}
  items={t.personalProjects.items ?? []}
  openRepoText={t.personalProjects.openRepo}
  reverse={true}
/>
