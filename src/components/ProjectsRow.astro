---
type ProjectItem = {
  title: string;
  year?: string;
  desc?: string;
  tags?: string[];
  linkHref?: string;
  linkText?: string;
  videoSrc?: string;
  posterSrc?: string;
};

type Props = {
  id: string;
  title: string;
  subtitle?: string;
  hint?: string;
  items: ProjectItem[];
  openRepoText?: string;
  reverse?: boolean; // newest first
};

const {
  id,
  title,
  subtitle = "",
  hint = "",
  items = [],
  openRepoText = "Open repo",
  reverse = true,
} = Astro.props as Props;

const list = reverse ? items.slice().reverse() : items;
---

<section id={id} class="reveal mt-20 scroll-mt-24">
  <div class="flex items-end justify-between gap-6 mb-6">
    <div>
      <h2 class="text-2xl font-bold">{title}</h2>
      {subtitle && (
        <p class="text-slate-600 dark:text-slate-400 mt-2">
          {subtitle}
        </p>
      )}
    </div>
  </div>

  <div class="overflow-x-auto">
    <div class="flex gap-5 pr-2 pb-2 pt-2 snap-x snap-mandatory">
      {list.map((p) => (
        <article
          class="group snap-start min-w-[320px] sm:min-w-[420px] md:min-w-[460px]
                 rounded-2xl border border-slate-200 bg-white/70 p-6 transition
                 hover:-translate-y-1 hover:bg-white
                 dark:border-slate-800 dark:bg-slate-900/30 dark:hover:bg-slate-900/50 dark:hover:border-slate-700"
        >
          <div class="flex items-start justify-between gap-4">
            <h3 class="text-lg font-semibold">{p.title}</h3>
            {p.year && (
              <span
                class="rounded-full border border-slate-200 px-3 py-1 text-xs text-slate-600
                       dark:border-slate-800 dark:text-slate-300"
              >
                {p.year}
              </span>
            )}
          </div>

          {p.videoSrc && (
            <div class="mt-4 overflow-hidden rounded-xl border border-slate-200 dark:border-slate-800">
              <video
                class="w-full aspect-video bg-black"
                src={p.videoSrc}
                poster={p.posterSrc}
                controls
                controlsList="nodownload noplaybackrate noremoteplayback"
                disablepictureinpicture
                playsinline
                preload="metadata"
                muted
                oncontextmenu="return false;"
              ></video>
            </div>
          )}

          {p.desc && (
            <p class="mt-3 text-slate-600 dark:text-slate-400 leading-relaxed">
              {p.desc}
            </p>
          )}

          {Array.isArray(p.tags) && p.tags.length > 0 && (
            <div class="mt-5 flex flex-wrap gap-2">
              {p.tags.map((tag) => (
                <span
                  class="rounded-full border border-slate-200 bg-slate-100/70 px-3 py-1 text-xs text-slate-700
                         dark:border-slate-800 dark:bg-slate-900/40 dark:text-slate-300"
                >
                  {tag}
                </span>
              ))}
            </div>
          )}

          {p.linkHref && (
            <a
              href={p.linkHref}
              target="_blank"
              rel="noreferrer"
              class="mt-5 inline-flex items-center text-sm font-semibold text-slate-700
                     hover:text-slate-950 transition
                     dark:text-slate-300 dark:hover:text-white"
            >
              {p.linkText ?? openRepoText}
              <span class="ml-1 transition group-hover:translate-x-0.5">â†’</span>
            </a>
          )}
        </article>
      ))}
    </div>
  </div>

  {hint && (
    <p class="mt-3 text-xs text-slate-500 dark:text-slate-500">
      {hint}
    </p>
  )}
</section>
