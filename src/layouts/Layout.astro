---
import "../styles/global.css";

const {
  title = "Koray Kelam",
  description = "Personal website",
  lang = "en",
} = Astro.props;
---

<!doctype html>
<html lang={lang} class="bg-white text-slate-950 dark:bg-slate-950 dark:text-slate-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <script is:inline>
      (function () {
        const root = document.documentElement;
        const key = "theme";

        // Eğer light seçiliyse, ilk boyamada bile flash olmasın:
        // önce doğru class'ı uygula
        const saved = localStorage.getItem(key);
        const theme = saved === "light" ? "light" : "dark"; // default dark
        root.classList.toggle("dark", theme === "dark");
      })();
    </script>
  </head>

  <body class="min-h-screen selection:bg-sky-400/30 selection:text-slate-950 dark:selection:text-white">
    <slot />
  </body>
</html>